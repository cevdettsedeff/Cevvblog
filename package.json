{
  "name": "cevvblog-backend",
  "author": "Cevdet SEDEF",
  "version": "1.0.0",
  "description": "Blog Backend API with Clean Architecture",
  "license": "MIT",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only --clear src/server.ts",
    "dev:debug": "ts-node-dev --inspect --respawn --transpile-only src/server.ts",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "ts-node scripts/seed-comprehensive.ts",
    "db:reset": "prisma migrate reset && npm run db:seed",
    "db:fresh": "prisma db push --force-reset && npm run db:seed",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "prisma": {
    "schema": "./src/infrastructure/database/prisma/schema.prisma"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/multipart": "^9.0.3",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/client": "^5.7.0",
    "@types/crypto-js": "^4.2.2",
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.1",
    "fastify": "^5.4.0",
    "inversify": "^6.0.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "minio": "^7.1.3",
    "reflect-metadata": "^0.2.2",
    "slugify": "^1.6.6",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.8.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "prisma": "^5.7.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.0"
  }
}
